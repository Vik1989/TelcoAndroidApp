<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/downloadSpeedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Speed: N/A"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bandTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Network Band: N/A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cellsiteIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cell Site ID: N/A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/rsrpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="RSRP: N/A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/rsrqTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="RSRQ: N/A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/rssiTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="RSSI: N/A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/sinrTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="SINR: N/A"
        android:textSize="16sp" />

    <Button
        android:id="@+id/testSpeedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Run Speed Test" />

</LinearLayout>